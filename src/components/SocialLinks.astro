---

<section class="social-links" aria-label="Enlaces sociales y de contacto">
  <div class="links-container">
    {socialLinks.map((link, index) => (
      <a 
        href={link.url}
        class="social-link"
        target={link.external ? "_blank" : "_self"}
        rel={link.external ? "noopener noreferrer" : ""}
        style={`animation-delay: ${(index + 1) * 0.2}s`}
        aria-label={`${link.name}: ${link.description}`}
        data-link-type={link.icon}
      >
        <div class="link-icon" set:html={getIcon(link.icon)} />
        <div class="link-content">
          <h3 class="link-name">{link.name}</h3>
          <p class="link-description">{link.description}</p>
        </div>
        <div class="link-arrow" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15,3 21,3 21,9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
        </div>
        <div class="link-loading" aria-hidden="true">
          <div class="loading-spinner"></div>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .social-links {
    padding: 2rem 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .links-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    text-decoration: none;
    color: #ffffff;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
    animation: fadeInUp 0.6s ease-out both;
  }

  .social-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.1), transparent);
    transition: left 0.5s ease-in-out;
  }

  .social-link:hover::before {
    left: 100%;
  }

  .social-link:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(99, 102, 241, 0.3);
    box-shadow: 
      0 10px 40px rgba(99, 102, 241, 0.2),
      0 0 0 1px rgba(99, 102, 241, 0.1);
  }

  .social-link:focus {
    outline: 2px solid #6366f1;
    outline-offset: 2px;
  }

  .link-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: rgba(99, 102, 241, 0.1);
    border-radius: 12px;
    margin-right: 1rem;
    transition: all 0.3s ease;
    color: #6366f1;
  }

  .social-link:hover .link-icon {
    background: rgba(99, 102, 241, 0.2);
    transform: scale(1.1);
  }

  .link-content {
    flex: 1;
  }

  .link-name {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .link-description {
    font-size: 0.9rem;
    color: #a1a1aa;
    margin: 0;
    font-weight: 400;
  }

  .link-arrow {
    display: flex;
    align-items: center;
    color: #6366f1;
    transition: all 0.3s ease;
    opacity: 0.7;
  }

  .social-link:hover .link-arrow {
    transform: translateX(4px);
    opacity: 1;
  }

  .link-loading {
    position: absolute;
    top: 50%;
    right: 1rem;
    transform: translateY(-50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .social-link:active .link-loading {
    opacity: 1;
  }

  .loading-spinner {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(99, 102, 241, 0.3);
    border-top: 2px solid #6366f1;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  @media (max-width: 768px) {
    .social-links {
      padding: 1rem;
    }

    .social-link {
      padding: 1.25rem;
    }

    .link-icon {
      width: 40px;
      height: 40px;
      margin-right: 0.75rem;
    }

    .link-name {
      font-size: 1rem;
    }

    .link-description {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .links-container {
      gap: 0.75rem;
    }

    .social-link {
      padding: 1rem;
    }
  }

  /* Reduce motion para accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .social-link,
    .link-icon,
    .link-arrow {
      animation: none;
      transition: none;
    }
    
    .social-link:hover {
      transform: none;
    }
    
    .social-link:hover .link-icon {
      transform: none;
    }
    
    .social-link:hover .link-arrow {
      transform: none;
    }
  }
</style>